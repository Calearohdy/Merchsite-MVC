@model MerchWebsite.Models.ShoppingUser
    @{
        ViewData["Title"] = "Edit";
    }
<br />
<div class="container">
<h2 class="text-info">Edit Admin User</h2>

<form method="POST" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row p-3">
            <div class="col-3 pb-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-9">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="col-3 pb-3">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-9">
                <input asp-for="UserName" class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <div class="col-3">
                <label asp-for="isAdmin">Assign to Admin</label>
            </div>
            <div class="col-9">
                <input type="checkbox" asp-for="isAdmin" class="form-control" value=""/>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>    
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}