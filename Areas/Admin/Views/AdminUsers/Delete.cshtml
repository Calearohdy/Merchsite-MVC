@model MerchWebsite.Models.ShoppingUser
    @{
        ViewData["Title"] = "Edit";
    }
<br />

<div class="container">
<h2 class="text-info">Disable Admin User</h2>

<form method="POST">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-3 pb-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-9">
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="col-3 pb-4">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-9">
                <input asp-for="UserName" disabled class="form-control" />
            </div>
            <div class="col-3">
                <label asp-for="isAdmin">Assign to Admin</label>
            </div>
            <div class="col-9">
                <input type="checkbox" asp-for="isAdmin" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
</div>
