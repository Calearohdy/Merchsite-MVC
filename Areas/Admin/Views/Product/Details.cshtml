@model MerchWebsite.Models.ViewModels.ProductsViewModel
@using MerchWebsite.Extension
    @{
        ViewData["Title"] = "Details";
    }
<br />
<div class="container">
<h2 class="text-info">Product Details</h2>

    <div class="p-4 border rounded row">
        <div class="col-8">

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-8">
                <input readonly asp-for="Products.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-8">
                <input readonly asp-for="Products.Price" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Image"></label>
            </div>
            <div class="col-8">
                <input readonly type="file" name="files" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-8">
                <input readonly asp-for="Products.ProductTypes.Name" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SpecialTags"></label>
            </div>
            <div class="col-8">
                <input readonly asp-for="Products.SpecialTags.Name" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.DesignStyle"></label>
            </div>
            <div class="col-8">
                <input readonly asp-for="Products.DesignStyle" class="form-control" />
            </div>
            <span asp-validation-for="Products.DesignStyle" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Available"></label>
            </div>
            <div class="col-8">
                <select>
                    <option>Yes</option>
                    <option>No</option>
                </select>
            </div>
        </div>                                 
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid black" />
        </div>
        <br />
        <div class="form-group">        
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>

</div>
<partial name="_FooterPartial" />