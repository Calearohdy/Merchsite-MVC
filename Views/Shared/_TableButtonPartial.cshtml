@model int 
@*
 takes an id param and passes it to each item
 Url.Action(action method, controller, id) 
 *@

<td style="width:150px">
    <div class="btn-group" role="group">
        <a role="button" class="btn btn-info" href="@Url.Action("Edit", new { id = Model})">
            <i class="fas fa-edit"></i>
        </a>
        <a role="button" class="btn btn-success" href="@Url.Action("Details", new { id = Model})">
            <i class="far fa-list-alt"></i>
        </a>
        <a role="button" class="btn btn-danger" href="@Url.Action("Delete", new { id = Model})">
            <i class="fas fa-trash-alt"></i>
        </a>
    </div>
</td>