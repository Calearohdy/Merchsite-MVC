@model MerchWebsite.Models.Shipping

<div class="container">
    <h4 class="text-success">Shipping Details Confirmation</h4>
    <div style="height: 100px; background-color:aliceblue" class="container border">
        <div class="col-12">
            <div class="row" style="padding-top:10px;">
                <div class="col-2">
                    Full Name:
                </div>
                <div class="col-4">
                    <input asp-for="@Model.CustomerName" readonly class="form-control" />
                </div>
                <div class="col-2">
                    Email:
                </div>
                <div class="col-4">
                    <input asp-for="@Model.CustomerEmail" readonly class="form-control" />
                </div>
                <div class="col-2">
                    Apt. Date:
                </div>
                <div class="col-4">
                    <input asp-for="@Model.ShippingDate" readonly class="form-control" />
                </div>
            </div>
        </div>
    </div>
</div>