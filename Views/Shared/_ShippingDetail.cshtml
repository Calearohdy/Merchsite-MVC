@model List<MerchWebsite.Models.Products>

<div class="container">
    @if(Model.Count > 0)
    {
    <table class="table table-striped" style="width: 100%;">
        <tr>
            <th style="text-align:center;width: 20%;"></th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().Name"></label>
            </th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().Price"></label>                                
            </th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().DesignStyle">Design</label>                                
            </th>
            <th style="text-align:center;">
                <label asp-for="@Model.FirstOrDefault().ProductTypes.Name"></label>                                
            </th>
            <th style="text-align:center;">
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="padding: 50px;">
                <td>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="item.Id">
                        <img src="@item.Image" width="100%" style="margin:auto; display:block; border-radius:5px; border: 1px solid black;"/>
                    </a>
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(c => item.Name)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(c => item.Price)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(c => item.DesignStyle)
                </td>
                <td style="text-align: center;">
                    @Html.DisplayFor(c => item.ProductTypes.Name)
                </td>
                <td style="text-align: center;">
                </td>                                                                                                                                                 
            </tr>
        }
    </table>
    }
</div>